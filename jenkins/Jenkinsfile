pipeline {
    agent none

    stages {
        stage('Checkout') {
            agent {
                docker {
                    image 'alpine/git' // A lightweight Docker image for Git operations
                }
            }
            steps {
                checkout scm
            }
        }

        stage('Set up Python') {
            agent {
                docker {
                    image 'python' // Use a Docker image with Python pre-installed
                }
            }
            steps {
                sh '''
                    #!/bin/sh
                    cd CodingBuddy
                '''
            }
        }

        stage('Run Migrations') {
            agent {
                docker {
                    image 'python:3.12-alpine' // Use the same Docker image for consistency
                }
            }
            steps {
                sh '''
                    #!/bin/sh
                    cd CodingBuddy
                    python manage.py migrate
                '''
            }
        }

        stage('Run Tests with Coverage') {
            agent {
                docker {
                    image 'python:3.12-alpine' // Use the same Docker image for consistency
                }
            }
            steps {
                sh '''
                    #!/bin/sh
                    cd CodingBuddy
                    coverage run --source='.' manage.py test
                    coverage xml
                '''
            }
        }
    }

    post {
        always {
            junit 'CodingBuddy/reports/*.xml'
        }
    }
}
